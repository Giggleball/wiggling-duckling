	section#download.download.text-center
		.container
			.row
				.col-md-8.col-md-offset-2
					h2.section-heading Discover new words everyday!
					.col-lg-8.col-lg-offset-2.text-center
						if user 
							h2 Welcome #{user.username}
						else
							div#first
								form.center-block(action='/login', method='post', onsubmit='return Validate()')
									h3.text-faded Login to play Kioku.
									br
									label.center
									div
										input#username(name='username', placeholder='username' required)
										div#username_error.val_error
									br
									br
									label.center
									div
										input#password(type='password', name='password', placeholder='password' required)
										div#password_error.val_error
